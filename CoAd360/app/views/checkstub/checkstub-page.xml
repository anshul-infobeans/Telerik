<Page xmlns="http://www.nativescript.org/tns.xsd" backgroundColor="#EBEBEB" loaded="pageLoaded" actionBarHidden="true">
    <GridLayout rows="*" tap="tapOnView">
		<ScrollView>	
      		<StackLayout cssClass="mainview" >
      			<SearchBar text="{{ search }}" hint="Tap to search" id="searchField" cssClass="searchbar" />
                <Label cssClass="gap" />
                <Label textWrap="true" text="Check Stub Date" width="{{ widthOfWidget }}" cssClass="titleLabel" />
                <Border cssClass="border" width="{{ widthOfWidget }}" tap="datePickerPressed">
            		<DockLayout width="{{ widthOfWidget }}" >
                		<Label dock="left" width="{{ widthOfWidget-30 }}" id="tdatepicker" cssClass="text-input dateLabel" text="5/1/2015"/>
                	</DockLayout>
     			</Border>
                
                <GridLayout>
                	<Image src="~/resources/dashboard/doughnut-chart.png" cssClass="chart" stretch="aspectFill" />
                    <StackLayout cssClass="chart-labels-area">
                        <Label textWrap="true" text="Total Net Pay" width="{{ widthOfWidget }}" cssClass="chartLabels charttitleLabel" />
                		<Label textWrap="true" text="$2,523.47" width="{{ widthOfWidget }}" cssClass="chartLabels chartdataLabel" />
                    </StackLayout>
                </GridLayout>
                
                <StackLayout orientation="horizontal" width="{{ widthOfWidget }}" cssClass="chart-legend-area">
                    <GridLayout width="{{ (widthOfWidget/3) }}" >
                        <Label cssClass="legend-earning legends" />
                        <StackLayout>
                            <Label textWrap="true" text="Earnings" width="{{ (widthOfWidget/3-24) }}" cssClass="legend-title-label" />
                            <Label textWrap="true" text="$3,546.73" width="{{ (widthOfWidget/3-24) }}" cssClass="legend-earning-label legend-label" />
                        </StackLayout>
                    </GridLayout> 
                    <GridLayout width="{{ (widthOfWidget/3) }}" >
                        <Label cssClass="legend-tax legends" />
                        <StackLayout>
                            <Label textWrap="true" text="Taxes" width="{{ (widthOfWidget/3-24) }}" cssClass="legend-title-label" />
                            <Label textWrap="true" text="$735.51" width="{{ (widthOfWidget/3-24) }}" cssClass="legend-tax-label legend-label" />
                        </StackLayout>
                    </GridLayout> 
                    <GridLayout width="{{ (widthOfWidget/3) }}">
                        <Label cssClass="legend-deduction legends" />
                        <StackLayout>
                            <Label textWrap="true" text="Deductions" width="{{ (widthOfWidget/3-24) }}" cssClass="legend-title-label" />
                            <Label textWrap="true" text="$517.03" width="{{ (widthOfWidget/3-24) }}" cssClass="legend-deduction-label legend-label" />
                        </StackLayout>
                    </GridLayout> 
                </StackLayout>
                
                <Label width="{{ widthOfWidget }}" cssClass="separator" />
                
               	<Label text="EARNINGS" cssClass="sectionheading"/>
            	<GridLayout cssClass="infocell">
                	<Label textWrap="true" text="Regular Pay" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$3,483.27" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                <GridLayout cssClass="infocell">
                	<Label textWrap="true" text="Reimbursement Expenses" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$63.46" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                
                <Label width="{{ widthOfWidget}}" cssClass="separator" />
                
               	<Label text="TAXES" cssClass="sectionheading"/>
            	<GridLayout cssClass="infocell">
                	<Label textWrap="true" text="Federal Income Tax" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$475.00" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                <GridLayout cssClass="infocell">
                	<Label textWrap="true" text="Medicare" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$25.00" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                <GridLayout cssClass="infocell" >
                	<Label textWrap="true" text="Medicare" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$25.00" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                
                <Label width="{{ widthOfWidget}}" cssClass="separator" />
                
                <Label text="DEDUCTIONS" cssClass="sectionheading"/>
            	<GridLayout cssClass="infocell" >
                	<Label textWrap="true" text="Medical Insurance" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$45.00" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                <GridLayout cssClass="infocell" >
                	<Label textWrap="true" text="Dental Insurance" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$11.60" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                <GridLayout cssClass="infocell" >
                	<Label textWrap="true" text="Life Insurance" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$420.37" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                <GridLayout cssClass="infocell" >
                	<Label textWrap="true" text="401K Contribution" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$20.00" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                <GridLayout cssClass="infocell" >
                	<Label textWrap="true" text="401K Loan" width="{{ infoWidth }}" cssClass="titleLabel" />
                	<Label textWrap="true" text="$20.06" width="{{ infoWidth }}" cssClass="dataLabel" />
            	</GridLayout>
                
                <Label width="{{ widthOfWidget}}" cssClass="separator" />
                
                <GridLayout cssClass="infocell" >
                	<Label textWrap="true" text="TOTAL:" width="{{ infoWidth }}" cssClass="titleLabel compensation-label" />
                	<Label textWrap="true" text="$2,523.47" width="{{ infoWidth }}" cssClass="dataLabel compensation-label" />
            	</GridLayout>
                
                <Label width="{{ widthOfWidget}}" cssClass="separator" />
                
                <Button text="Total Compensation Report" cssClass="compensation-report-button" />
                
                
                <GridLayout cssClass="tool-bar-button" >
                    <Button text="Terms Of Use" cssClass="linkbutton terms-of-use" />
                    <Label cssClass="link-separator link-separator-left"/>
                	<Button text="Privacy Policy" cssClass="linkbutton privacy-policy" />
                    <Label cssClass="link-separator link-separator-right"/>
                    <Button text="Contact Us" cssClass="linkbutton contact-us" />
            	</GridLayout>
     		</StackLayout>
        </ScrollView>
        <Label id="navigationBar" cssClass="navigationbar" />
    	<Label id="heading" text="CHECK STUB" cssClass="pageheading"/>
    	<Image src="~/resources/common/BackButton.png" cssClass="back-button" stretch="aspectFit" tap="backButtonPressed" />
    	<Label id="tapableArea" tap="backButtonPressed" cssClass="back-tapableArea"/>
        <DatePicker id="datePicker" visibility="collapsed"></DatePicker>
	</GridLayout>
</Page>