<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" xmlns:tsb="common/TelerikUI/sidedrawer" actionBarHidden="true">
    <GridLayout rows="*">
        <ScrollView>
            <Button id="changePasswordButton" text="Change Password" cssClass="change-password-button" tap="changePasswordButtonTap" />
        <StackLayout cssClass="main-view">
        	<DockLayout verticalAlignment="top" marginTop="44" backgroundColor="#7157A0" height="34">
            	<Image marginLeft="10" dock="left" src="~/resources/dashboard/Search.png" cssClass="input-image" stretch="aspectFit" tap="passwordFieldPressed" height="17" width="17"/>
            	<TextField marginLeft="10" dock="right" id="tsearch" cssClass="text-input" hint="Tap to search" returnKeyType="go" text="{{ search }}"/>
        	</DockLayout>
        	<GridLayout width="{{ widthOfWidget}}" cssClass="widget" tap="checkStubPage">
        		<Label id="checkstub" text="Check Stub" cssClass="widget-label"/>
        	</GridLayout>
        	<GridLayout width="{{ widthOfWidget}}" cssClass="widget" tap="mySummayPageTwoColumn">
        		<Label id="mysummarytwocolumn" text="My Summary Two Column" cssClass="widget-label"/>
        	</GridLayout>
            <GridLayout width="{{ widthOfWidget}}" cssClass="widget" tap="mySummayPage3">
        		<Label id="mysummaryV3" text="My Summary V3" cssClass="widget-label"/>
        	</GridLayout>
            <Label cssClass="gap" />
        </StackLayout>
        </ScrollView>
        
        <Label id="navigationBar" cssClass="navigationbar" />
    	<Label id="heading" text="DASHBOARD" cssClass="pageheading"/>
    	<Image src="~/resources/common/Menu.png" cssClass="back-button" stretch="aspectFit" tap="backButtonPressed" />
    	<Label id="tapableArea" tap="backButtonPressed" cssClass="back-tapableArea"/>
        <Button horizontalAlignment="right" verticalAlignment="top" id="logoutButton" text="Log Out" cssClass="logout-button" tap="logoutButtonTap" />
  	</GridLayout>
</Page>