<Page xmlns="http://www.nativescript.org/tns.xsd" backgroundColor="#EBEBEB" loaded="pageLoaded" actionBarHidden="true">
  <GridLayout rows="*" tap="tapOnView">
    	<Label id="navigationBar" verticalAlignment="top" style="background-color: #8666BC;" />
    	<Label id="heading" horizontalAlignment="center" text="Address" style="font-size: 20; text-align: center; color: white;" height="44"/>
      	<Image verticalAlignment="top" horizontalAlignment="left" src="~/resources/common/BackButton.png" cssClass="back-button" stretch="aspectFit" tap="backButtonPressed" />
      	<Label id="tapableArea" horizontalAlignment="left" verticalAlignment="top" width = "60" tap="backButtonPressed"/>
      	<StackLayout marginTop="59">
            <Label verticalAlignment="top" text="Address Line 1" cssClass="titleLabel" width="{{ widthOfWidget }}" />
            <TextView id="address1"verticalAlignment="top" textWrap="true" text="123-456-7890" width="{{ widthOfWidget }}" cssClass="textField" />
            <Label marginTop="15" verticalAlignment="top" text="Address Line 2" cssClass="titleLabel" width="{{ widthOfWidget }}" />
            <TextView id="address2" verticalAlignment="top" textWrap="true" text="123-456-7890" width="{{ widthOfWidget }}" cssClass="textField" />
      </StackLayout>
	</GridLayout>
</Page>