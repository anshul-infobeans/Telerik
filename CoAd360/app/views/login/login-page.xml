<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <GridLayout rows="*">
		<Image src="{{ imageSource }}" stretch="aspectFill" />
		<StackLayout verticalAlignment="center" >
            <Image src="~/resources/login/Logo.png" cssClass="app-logo" />
            <Border borderWidth="1" borderColor="#C0C0C0" width="280" height="50">
            	<DockLayout width="278" backgroundColor="#FFFFFF" >
                	<TextField dock="left" id="tusername" cssClass="text-input" hint="Email" keyboardType="email" text="{{ username }}"/>
               	    <Image dock="right" src="~/resources/login/Email.png" cssClass="input-image" stretch="aspectFit" />
                </DockLayout>
     		</Border>
            <Label id="text-email-error" horizontalAlignment="center" text="Invalid Email" style="font-size: 10; background-color: #EC9700; margin: 0 0 5 190; text-align: center;" width="90" height="18"/>
            <Border borderWidth="1" borderColor="#C0C0C0" width="280" height="50">
            	<DockLayout width="278" backgroundColor="#FFFFFF" >
                	<TextField dock="left" id="tpassword" cssClass="text-input" hint="Password" secure="true" text="{{ password }}"/>
               	    <Image dock="right" src="~/resources/login/Password_lock.png" cssClass="input-image" stretch="aspectFit" />
                </DockLayout>
     		</Border>
            <DockLayout stretchLastChild="true" horizontalAlignment="center" >
      			<Image dock="left" src="{{ checkBoxImageSource }}" tap="{{ checkBoxPressed }}" style="margin: 10 0 10 0;" width="28" height="28" tap="rememberMeButtonTap" />
                <Label id="lrememberMe" dock="left" text="Remember Me" style="font-size: 12; margin: 5 0 5 5; text-align: left;" width="90" height="28"/>
   				<Label id="lforgotPassword" dock="right" text="Forgot Password?" style="font-size: 12; margin: 5 0 5 37; text-align: right; " width="120" height="28" cssClass="link"  tap="forgotPasswordButtonTap" />
 			</DockLayout >
            <Button text="LOGIN" id="login" cssClass="login-button" tap="loginButtonTap" />
            <Label id="login-error" visibility="{{loginErrorVisibility}}" horizontalAlignment="center" text="The e-mail address or password you entered was incorrect. Please try again" style="font-size: 11; background-color: #E49700; margin: 5 0 5 0; text-align: center;" width="280" height="30" textWrap="true" />
            <ActivityIndicator busy="{{ isLoading }}" cssClass="activity-indicator" style="margin: 10 0 0 0;" />
    	</StackLayout>
        <StackLayout orientation="horizontal" cssClass="policyTerms">
            <Label text="Privacy Policy" cssClass="policyTermsButton" tap="privacyButtonPressed" marginRight="10" />
            <Label text="Terms Of Use" cssClass="policyTermsButton" tap="termsOfUseButtonPressed" marginLeft="10"/>
        </StackLayout>
        <Label text="Copyright C 2014, CoAdvantage, Inc. All Rights Reserved." cssClass="sub-title" />
	</GridLayout>
</Page>
