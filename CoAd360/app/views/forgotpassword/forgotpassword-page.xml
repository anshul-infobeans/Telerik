<Page xmlns="http://www.nativescript.org/tns.xsd" backgroundColor="#EBEBEB" loaded="pageLoaded">
  <GridLayout rows="*">
      	<Label id="navigationBar" verticalAlignment="top" style="background-color: #8666BC;" />
    	<Label id="heading" horizontalAlignment="center" text="Request Password" style="font-size: 20; text-align: center; color: white;" height="44"/>
      	<Image verticalAlignment="top" horizontalAlignment="left" src="~/resources/common/BackButton.png" cssClass="back-button" stretch="aspectFit" tap="backButtonPressed" />
      	<Label id="tapableArea" horizontalAlignment="left" verticalAlignment="top" width = "60" tap="backButtonPressed"/>
      	<DockLayout verticalAlignment="center" width="280px">
            <Label dock="top" horizontalAlignment="left" text="Using:" style="font-size: 15; text-align: left;" height="30"/>
            
            <StackLayout dock="top" orientation="horizontal" cssClass="options">
            	<Label id="optionButtonEmail" text="Email" cssClass="optionButton primaryButtonNormal" tap="emailButtonPressed" />
            	<Label id="optionButtonLegalName" text="Legal Name" cssClass="optionButton primaryButtonUnselected" tap="passwordButtonPressed"/>
        	</StackLayout>
            
            <StackLayout dock="bottom" width="300px">
              
            	<Border borderWidth="1" borderColor="#C0C0C0" width="280" height="50">
            		<DockLayout width="278" backgroundColor="#FFFFFF" >
                		<TextField dock="left" id="tusername" cssClass="text-input" hint="Email" keyboardType="email" text="{{ username }}"/>
                	</DockLayout>
     			</Border>
                
            	<Border id="lastName" borderWidth="1" borderColor="#C0C0C0" width="280" height="50" visibility="collapsed" marginTop="10">
            		<DockLayout width="278" backgroundColor="#FFFFFF" >
                		<TextField dock="left" id="tlastname" cssClass="text-input" hint="Last Name" text="{{ lastName }}"/>
                	</DockLayout>
     			</Border>
                
            	<Label id="text-email-error" visibility="collapsed" horizontalAlignment="center" text="Invalid Email" style="font-size: 10; background-color: #EC9700; margin: 0 0 5 190; text-align: center;" width="90" height="18"/>
            	<Border borderWidth="1" borderColor="#C0C0C0" width="280" height="50" marginTop="10">
            		<DockLayout width="278" backgroundColor="#FFFFFF" >
                		<TextField dock="left" id="tpassword" cssClass="text-input" hint="Security Code" secure="true" text="{{ password }}"/>
                	</DockLayout>
     			</Border>
            	<Button text="Get Password" id="getPassword" cssClass="get-password-button primaryButtonUnselected" tap="getPasswordButtonPressed" />
            	<Label id="login-error" visibility="collapsed" horizontalAlignment="center" text="The e-mail address or password you entered was incorrect. Please try again" style="font-size: 11; background-color: #E49700; margin: 5 0 5 0; text-align: center;" width="280" height="30" textWrap="true" />
            	<ActivityIndicator visibility="collapsed" busy="{{ isLoading }}" cssClass="activity-indicator" style="margin: 10 0 0 0;" />
    		</StackLayout>
      	</DockLayout>
	</GridLayout>
</Page>