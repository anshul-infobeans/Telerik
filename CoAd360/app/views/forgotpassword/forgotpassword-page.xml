<Page xmlns="http://www.nativescript.org/tns.xsd" backgroundColor="#EBEBEB" loaded="pageLoaded" navigatedTo="navigatedTo" actionBarHidden="true">
  <GridLayout rows="*" tap="tapOnView">
      	<Label id="navigationBar" cssClass="navigationbar" />
    	<Label id="heading" text="REQUEST PASSWORD" cssClass="pageheading"/>
    	<Image src="~/resources/common/BackButton.png" cssClass="back-button" stretch="aspectFit" tap="backButtonPressed" />
    	<Label id="tapableArea" tap="backButtonPressed" cssClass="back-tapableArea"/>
      	<DockLayout verticalAlignment="center" width="280px">
            
            <StackLayout dock="top" orientation="horizontal" cssClass="options">
            	<Label id="optionButtonEmail" text="Email" cssClass="optionButton primaryButtonNormal" tap="emailButtonPressed" />
            	<Label id="optionButtonLegalName" text="Legal Name" cssClass="optionButton primaryButtonUnselected" tap="passwordButtonPressed"/>
        	</StackLayout>
            <StackLayout dock="bottom">
            	<Border cssClass="text-field-border forgot-component">
            		<DockLayout>
                		<TextField dock="left" id="tusername" cssClass="text-input" hint="Email" keyboardType="email" text="{{ username }}"/>
                	</DockLayout>
     			</Border>
                
            	<Border id="lastName" visibility="collapsed" cssClass="text-field-border forgot-component">
            		<DockLayout>
                		<TextField dock="left" id="tlastname" cssClass="text-input" hint="Last Name" text="{{ lastName }}"/>
                	</DockLayout>
     			</Border>
                
            	<Label id="text-email-error" visibility="collapsed" text="Invalid Email" cssClass="error-message invalid-email"/>
            	<Border cssClass="text-field-border forgot-component">
            		<DockLayout>
                		<TextField dock="left" id="tpassword" cssClass="text-input" hint="Security Code" secure="true" text="{{ password }}"/>
                	</DockLayout>
     			</Border>
            	<Button text="Get Password" id="getPassword" cssClass="get-password-button primaryButtonUnselected" tap="getPasswordButtonPressed" />
            	<Label id="login-error" visibility="collapsed" horizontalAlignment="center" text="The e-mail address or password you entered was incorrect. Please try again" textWrap="true" />
            	<ActivityIndicator visibility="collapsed" busy="{{ isLoading }}" cssClass="activity-indicator"/>
    		</StackLayout>
      	</DockLayout>
	</GridLayout>
</Page>