<Page xmlns="http://www.nativescript.org/tns.xsd" backgroundColor="#EBEBEB" loaded="pageLoaded" navigatedTo="navigatedTo" actionBarHidden="true">
  <GridLayout rows="*" tap="tapOnView">
      	<Label id="navigationBar" verticalAlignment="top" style="background-color: #8666BC;" />
    	<Label id="pageheading" horizontalAlignment="center" text="Change Password" style="font-size: 20; text-align: center; color: white;" height="44"/>
      	<Image verticalAlignment="top" horizontalAlignment="left" src="~/resources/common/BackButton.png" cssClass="back-button" stretch="aspectFit" tap="backButtonPressed" />
      	<Label id="tapableArea" horizontalAlignment="left" verticalAlignment="top" width = "60" tap="backButtonPressed"/>
        <StackLayout verticalAlignment="center" width="300px">       
           	<Border borderWidth="1" borderColor="#C0C0C0" width="280" height="50">
            	<DockLayout width="278" backgroundColor="#FFFFFF" >
               		<TextField dock="left" id="tnewpassword" cssClass="text-input" hint="New Password" keyboardType="email" text="{{ newpassword }}"/>
               	</DockLayout>
     		</Border>
           	<Border borderWidth="1" borderColor="#C0C0C0" width="280" height="50" marginTop="10">
           		<DockLayout width="278" backgroundColor="#FFFFFF" >
               		<TextField dock="left" id="tconfirmpassword" cssClass="text-input" hint="Confirm Password" text="{{ confirmpassword }}"/>
               	</DockLayout>
     		</Border>
           	<Label id="confirm-password-error" visibility="collapsed" horizontalAlignment="center" text="Passwords do not match." style="font-size: 10; background-color: #EC9700; margin: 0 0 5 150; text-align: center;" width="130" height="18"/>
           	<Border borderWidth="1" borderColor="#C0C0C0" width="280" height="50" marginTop="10">
           		<DockLayout width="278" backgroundColor="#FFFFFF" >
               		<TextField dock="left" id="tsecurityCode" cssClass="text-input" hint="Security Code" secure="true" text="{{ securitycode }}"/>
               	</DockLayout>
     		</Border>
           	<Button text="Update" id="changePassword" cssClass="change-password-button primaryButtonUnselected" tap="changePasswordButtonPressed" />
           	<Label id="login-error" visibility="collapsed" horizontalAlignment="center" text="There is some error. Please try again" style="font-size: 11; background-color: #E49700; margin: 5 0 5 0; text-align: center;" width="280" height="30" textWrap="true" />
           	<ActivityIndicator visibility="collapsed" busy="{{ isLoading }}" cssClass="activity-indicator" style="margin: 10 0 0 0;" />
    	</StackLayout>
	</GridLayout>
</Page>